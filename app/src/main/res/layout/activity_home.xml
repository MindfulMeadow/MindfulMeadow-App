<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">


    <!--    Text: Mindful Meadow-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mindful Meadow"
        android:textColor="#4CAF50"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        />

    <!--    Text: Greeting-->
    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, Steven!"
        android:textColor="#2196F3"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/meadow"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_greeting"
        android:layout_marginTop="20dp"
        >

        <!--        Image: Meadow Image-->
        <ImageView
            android:id="@+id/imgv_meadow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/meadow" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            >

            <!--            Text: Your Meadow is flourishing!-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Your Meadow is flourishing!"
                android:textSize="20sp"
                />

            <!--            Botton: What is this?-->
            <Button
                android:id="@+id/btn_meadow_meaning"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="What is this?"
                />

        </LinearLayout>

    </LinearLayout>


    <!--    Text: How are you today?-->
    <TextView
        android:id="@+id/tv_how"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How are you today?"
        android:textSize="30sp"
        android:layout_below="@+id/meadow"
        android:gravity="center"
        />

    <!--    Button: Start a log-->
    <Button
        android:id="@+id/btn_start_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start a Log"
        android:layout_below="@+id/tv_how"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <!--    Text: Every emotion...-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Every emotion is a step towards greater self-awareness and growth."
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn_start_log"
        android:gravity="center"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navi_menu"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>
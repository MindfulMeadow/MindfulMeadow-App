<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Logging_fifthActivity">

    <!--    The back button-->
    <ImageView
        android:id="@+id/iv_back_to_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your log is set to the current time by default."
        android:layout_below="@id/iv_back_to_fourth"
        android:textColor="@color/blue_green"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change it here:"
        android:layout_below="@id/tv_hint"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"/>

    <DatePicker
        android:id="@+id/dp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_here"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_date_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save this log"
        android:textSize="20sp"
        android:layout_below="@id/dp_1"
        android:layout_marginTop="20dp"/>

</RelativeLayout>